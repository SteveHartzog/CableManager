# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true


# Indentation override for all JS under app/js directory
[app/publish/js/**.js]
indent_style = tab
indent_size = 3
charset = utf-8

 # Config files
[{package.json,karma.conf.js,Gruntfile.js,bower.json,.jshintrc,.bowerrc}]
indent_style = space
indent_size = 2
